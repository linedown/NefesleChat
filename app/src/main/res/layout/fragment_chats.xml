<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chatsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nedowhite"
    tools:context=".ui.chats.ChatsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lastMessageLayout1"
        android:layout_width="384dp"
        android:layout_height="80dp"
        android:layout_marginTop="20sp"
        android:background="@drawable/bg_group_chat"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/icon_chat_view"
            android:layout_width="50dp"
            android:layout_height="38dp"
            android:layout_marginStart="28dp"
            android:src="@drawable/group"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/chat_name_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16sp"
            android:fontFamily="@font/inter_bold"
            android:text="ИВБ-111"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/icon_chat_view"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/message_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/inter_light"
            android:text="Привет сообщения"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/icon_chat_view"
            app:layout_constraintTop_toBottomOf="@+id/chat_name_view" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/lastMessageLayout2"
        android:layout_width="384dp"
        android:layout_height="80dp"
        android:layout_marginTop="20sp"
        android:background="@drawable/bg_student_settings"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lastMessageLayout1">

        <ImageView
            android:id="@+id/icon_chat_view2"
            android:layout_width="50dp"
            android:layout_height="38dp"
            android:layout_marginStart="28dp"
            android:src="@drawable/man"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/chat_name_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="16sp"
            android:fontFamily="@font/inter_bold"
            android:text="Слесарев Роман"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toEndOf="@+id/icon_chat_view2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/message_view2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/inter_light"
            android:text="Надеюсь сегодня у нас всё получится"
            android:textColor="@color/white"
            app:layout_constraintStart_toEndOf="@+id/icon_chat_view2"
            app:layout_constraintTop_toBottomOf="@+id/chat_name_view2" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>