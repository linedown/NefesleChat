<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/chatsLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nedowhite"
    android:orientation="vertical"
    tools:context=".ui.ChatsFragment">

    <LinearLayout
        android:id="@+id/lastMessageLayout1"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="14sp"
        android:layout_marginTop="500sp"
        android:layout_marginEnd="14sp"
        android:background="@drawable/bg_group_chat"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon_chat_view"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:src="@drawable/group"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/chat_name_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="6dp"
                android:fontFamily="@font/inter_bold"
                android:text="ИВБ-111"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/message_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="35dp"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/inter_light"
            android:text="Привет сообщения"
            android:textColor="@color/white" />
    </LinearLayout>


</LinearLayout>